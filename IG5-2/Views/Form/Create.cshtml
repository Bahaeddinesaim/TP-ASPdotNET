@model IG5_2.ViewModels.FormVM
<form  method="post" >
    <div class="form-group">
        <label asp-for="Libelle"></label>
        <input asp-for="Libelle" class="form-control" />
        <span asp-validation-for="Libelle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="textarea" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Livraison</label><br />
        <div class="form-check form-check-inline">
            <input asp-for="Livraison" type="radio" name="Livraison" value="true" class="form-check-input" />
            <label class="form-check-label" for="Livraison">Oui</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Livraison" type="radio" name="Livraison" value="false" class="form-check-input" />
            <label class="form-check-label" for="Livraison">Non</label>
        </div>
        <span asp-validation-for="Livraison" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mode de paiement</label><br />
        <div class="form-check">
            <input asp-for="ModeDePaiement" type="checkbox" value="Espèces" class="form-check-input" />
            <label class="form-check-label" for="ModeDePaiement">Espèces</label>
        </div>
        <div class="form-check">
            <input asp-for="ModeDePaiement" type="checkbox" value="Chèque" class="form-check-input" />
            <label class="form-check-label" for="ModeDePaiement">Chèque</label>
        </div>
        <div class="form-check">
            <input asp-for="ModeDePaiement" type="checkbox" value="Virement" class="form-check-input" />
            <label class="form-check-label" for="ModeDePaiement">Virement</label>
        </div>
        <span asp-validation-for="ModeDePaiement" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ajouter Produit</button>
</form>